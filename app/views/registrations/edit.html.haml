= javascript_include_tag 'editor'
= render partial: '/header', :locals => { :page_title => 'Event Registration' }
.wrapper
  %section
    = render partial: '/nav'
    %article
      = render partial: '/flash_message'
      #registration
        %h3 Edit registeration for #{ event.name }
        %p Step 1 of 2 (your information)
        = simple_form_for registration, url: event_registration_path, method: 'put' do |f|
          = render partial: 'form', locals: { f: f }
